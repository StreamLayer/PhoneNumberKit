{
  "branches": ["master", {"name":"5.0.1-swift","prerelease":true}],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "angular"
    }],
    ["@semantic-release/exec", {
      "prepareCmd": "echo SWIFT_VERSION=5.1.3 >> $XCODE_XCCONFIG_FILE; carthage build --commitish v${nextRelease.version} --cache-builds --archive --archive-output SLR_PhoneNumberKit.framework.zip"
    }],
    ["@semantic-release/git", {
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
      "assets": ["report.json"]
    }],
    ["@semantic-release/github", {
      "assets": [
        { "path": "SLR_PhoneNumberKit.framework.zip" },
        { "path": "report.json" }
      ]
    }]
  ]
}
